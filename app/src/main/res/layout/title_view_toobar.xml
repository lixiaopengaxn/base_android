<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bar_all_layout"
    style="@style/MATCH.VER">

    <!--<View-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="24dp"/>-->


    <RelativeLayout
        android:id="@+id/title_all_layout"
        style="@style/H_WRAP_W_MATCH.HOR"
        android:layout_gravity="bottom">

        <TextView
            android:id="@+id/title_left_text"
            style="@style/H_MATCH_W_WRAP"
            android:gravity="center"
            android:text="@string/back"
            android:textColor="@color/white"
            android:textSize="15sp" />


        <ImageView
            android:id="@+id/title_left_img"
            style="@style/H_MATCH_W_WRAP"
            android:gravity="center"
            android:paddingRight="30dp"
            android:src="@mipmap/ic_launcher"
            android:visibility="gone" />

        <TextView
            android:id="@+id/title_center_text"
            style="@style/H_MATCH_W_WRAP"
            android:layout_centerInParent="true"
            android:ellipsize="end"
            android:gravity="center"
            android:lines="1"
            android:maxEms="10"
            android:text="@string/title"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/title_center_img"
            style="@style/H_MATCH_W_WRAP"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:src="@mipmap/ic_launcher"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/title_right_text"
            style="@style/H_MATCH_W_WRAP"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="@string/title_settings"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/title_right_img"
            style="@style/H_MATCH_W_WRAP"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:visibility="invisible" />

    </RelativeLayout>


</LinearLayout>